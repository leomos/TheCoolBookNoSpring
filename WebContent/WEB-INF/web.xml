<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
	<display-name>TheCoolBook</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
  
	<servlet>
		<servlet-name>AllAuthorsServlet</servlet-name>
		<jsp-file>/allAuthors.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>AllBooksServlet</servlet-name>
		<jsp-file>/allBooks.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>AllEventsServlet</servlet-name>
		<jsp-file>/allEvents.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>AuthorServlet</servlet-name>
		<jsp-file>/author.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.etlforma.servlets.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LoginFormServlet</servlet-name>
		<jsp-file>/loginForm.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>AuthorsServlet</servlet-name>
		<servlet-class>com.etlforma.servlets.AuthorsServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>NewAuthorServlet</servlet-name>
		<servlet-class>com.etlforma.servlets.NewAuthorServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>AllAuthorsServlet</servlet-name>
		<url-pattern>/allAuthors.jsp</url-pattern>   
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AllBooksServlet</servlet-name>
		<url-pattern>/allBooks.jsp</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AllEventsServlet</servlet-name>
		<url-pattern>/allEvents.jsp</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AuthorServlet</servlet-name>
		<url-pattern>/author.jsp</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginFormServlet</servlet-name>
		<url-pattern>/loginForm</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AuthorsServlet</servlet-name>
		<url-pattern>/authors</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>NewAuthorServlet</servlet-name>
		<url-pattern>/author</url-pattern>
	</servlet-mapping>
	
</web-app>